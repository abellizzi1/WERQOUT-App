<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.werqoutfrontend">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".EditProfileScreen"
            android:exported="true"
            android:theme="@style/Theme.WerqoutFrontend" />
        <activity
            android:name=".EditGroupScreen"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".AddDeleteWorkoutScreen"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".GroupInfoScreen"
            android:exported="false" />
        <activity
            android:name=".CoachGroupsScreen"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".ProfileScreen"
            android:exported="true"
            android:theme="@style/Theme.WerqoutFrontend" />
        <activity
            android:name=".AthleteHomeScreen"
            android:exported="true" />
        <activity
            android:name=".CoachHomeScreen"
            android:exported="true" />
        <activity
            android:name=".RegisterScreen"
            android:exported="true" />
        <activity
            android:name=".LoginScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
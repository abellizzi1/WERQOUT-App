<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFA7"
    tools:context=".RatingPopUp">

    <TextView
        android:id="@+id/rating_text_rating_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave a Rating"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <Button
        android:id="@+id/submit_rating_rating_popup"
        android:layout_width="285dp"
        android:layout_height="59dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_text_rating_popup"
        app:layout_constraintVertical_bias="0.405" />

    <Button
        android:id="@+id/cancel_rating_rating_popup"
        android:layout_width="285dp"
        android:layout_height="59dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submit_rating_rating_popup"
        app:layout_constraintVertical_bias="0.085" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/submit_rating_rating_popup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_text_rating_popup">

        <ImageView
            android:id="@+id/star1_rating_popup"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_star_24" />

        <ImageView
            android:id="@+id/star2_rating_popup"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_star_24" />

        <ImageView
            android:id="@+id/star3_rating_popup"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_star_24" />

        <ImageView
            android:id="@+id/star4_rating_popup"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_star_outline_24" />

        <ImageView
            android:id="@+id/star5_rating_popup"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_star_outline_24" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
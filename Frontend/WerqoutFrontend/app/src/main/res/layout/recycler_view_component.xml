<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    app:cardCornerRadius="4dp"
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/imageView_search_screen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"></ImageView>

        <TextView
            android:id="@+id/username_textView_search_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView_search_screen"
            android:text="line1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/description_textView_search_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_textView_search_screen"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageView_search_screen"
            android:text="Line2"
            android:textSize="15sp"></TextView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ProfileScreen">

    <androidx.cardview.widget.CardView

        android:id="@+id/cardView"
        android:layout_width="377dp"
        android:layout_height="128dp"
        app:cardBackgroundColor="#1EE98A"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profile_picture_profile_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/Username_textview_profile_screen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/Username_textview_profile_screen"
                android:layout_width="247dp"
                android:layout_height="59dp"
                android:text="Username"
                android:textAlignment="center"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.992"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.507" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/edit_profile_button_profile_screen"
        android:layout_width="343dp"
        android:layout_height="49dp"
        android:text="Edit Profile"
        android:textColor="@color/white"
        app:backgroundTint="@color/black"
        app:cornerRadius="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.028"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="331dp"
        android:layout_height="352dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_button_profile_screen"
        app:layout_constraintVertical_bias="0.109">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="353dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userID_text_profile_screen"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="ID: "
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/userType_text_profile_screen"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:baselineAligned="false"
                    android:text="Username:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/email_text_profile_screen"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Email:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/bio_profileScreen"
                    android:layout_width="match_parent"
                    android:layout_height="214dp"
                    android:text="Bio:"
                    android:textSize="20sp" />

            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/friends_button_profile_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="23dp"
        android:backgroundTint="@color/black"
        android:text="Friends"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/return_button_profile_screen"
        app:layout_constraintEnd_toStartOf="@+id/groups_button_profile_screen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview2"
        app:strokeColor="@color/white"
        app:strokeWidth="2sp" />

    <Button
        android:id="@+id/groups_button_profile_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="@color/black"
        android:text="Groups"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/return_button_profile_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/friends_button_profile_page"
        app:layout_constraintTop_toBottomOf="@+id/cardview2"
        app:strokeColor="@color/white"
        app:strokeWidth="2sp" />

    <Button
        android:id="@+id/return_button_profile_screen"
        android:layout_width="320dp"
        android:layout_height="46dp"
        android:backgroundTint="@color/black"
        android:text="Return"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview2"
        app:layout_constraintVertical_bias="0.943"
        app:strokeColor="@color/white"
        app:strokeWidth="2sp" />

</androidx.constraintlayout.widget.ConstraintLayout>